@model IEnumerable<Garage.Models.Product>

@{
    ViewBag.Title = "Management";
}


<div class="product">
    <h2>Management</h2>

    <p>
        <a href="~/Manager/Create" class="btn btn-success">Add Product</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td style="max-width: 500px">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="../../Images/@item.Image" alt="@item.Name" style="width: 150px; height: 150px;" />
                    @*@Html.DisplayFor(modelItem => item.Image)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType.Name)
                </td>
                <td>
                    <a href="~/Manager/Edit/@item.Id" class="btn btn-warning">Edit</a> |
                    <a href="~/Manager/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>