@model Garage.Models.UserSignIn

@{
    ViewBag.Title = "SignIn";
}

<div class="move">
    <h2>SignIn</h2>
</div>

<div class="car">
    @using (Html.BeginForm("SignIn", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control", id = "Username", placeholder = "Username" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", id = "Password", placeholder = "Password" })
        </div>
        if (ViewBag.loginError != null)
        {
            <div class="form-group" style="color:red">
                @ViewBag.loginError
            </div>
        }
        <button type="submit" class="btn btn-default btn-info" style="margin-left: 150px;">Sign In</button>
    }

</div>

