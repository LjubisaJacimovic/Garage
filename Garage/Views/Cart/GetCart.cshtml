@model IEnumerable<Garage.Models.GetCart>

@{
    ViewBag.Title = "GetCart";
}

<div class="buy">
    <h2>Shopping Cart</h2>

    <table class="table">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePurchased)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInCart)
            </th>



            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <img src="~/Images/@Html.DisplayFor(modelItem => item.Product.Image)" alt="Alternate Text" style="width:70px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePurchased)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsInCart)
                </td>


                <td>
                    @Html.ActionLink("Delete", "DeleteCart", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
        <p>Total price of your cart is: @ViewBag.TotalPrice</p>
        <a href="~/Cart/BuyProducts" class="btn btn-success">Buy Products</a> 
</div>
